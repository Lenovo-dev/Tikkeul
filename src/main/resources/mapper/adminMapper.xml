    <select id="adminSelectUserAll" resultType="userVO">
        SELECT ID, NAME , IDENTIFICATION, ADDRESS, PHONENUMBER
        FROM USERS
    </select>

    <!--  관리자페이지 유저 삭제  -->
    <delete id="adminDeleteUser">
        DELETE FROM USERS WHERE ID = #{id}
    </delete>

